<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Staff Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f4f6f8;
      padding: 40px 20px;
      color: #333;
    }

    h2 {
      color: #5563DE;
      text-align: center;
      margin-bottom: 20px;
    }

    nav {
      text-align: center;
      margin-bottom: 20px;
    }

    nav a {
      color: #5563DE;
      text-decoration: none;
      font-weight: bold;
      margin: 0 10px;
      transition: color 0.3s;
    }

    nav a:hover {
      color: #3b46b1;
      text-decoration: underline;
    }

    form.search-form {
      display: flex;
      justify-content: center;
      margin-bottom: 30px;
      gap: 10px;
    }

    form.search-form input {
      padding: 10px 15px;
      border-radius: 8px;
      border: 1px solid #ccc;
      width: 250px;
      font-size: 16px;
    }

    form.search-form button {
      padding: 10px 20px;
      border-radius: 8px;
      border: none;
      background: #5563DE;
      color: white;
      font-weight: bold;
      cursor: pointer;
      transition: background 0.3s;
    }

    form.search-form button:hover {
      background: #3b46b1;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    th, td {
      padding: 15px;
      text-align: center;
      border-bottom: 1px solid #e0e0e0;
    }

    th {
      background: #5563DE;
      color: white;
      font-size: 16px;
    }

    tr:hover {
      background: #f1f3f6;
    }

    input[type="number"] {
      width: 60px;
      padding: 6px;
      border-radius: 6px;
      border: 1px solid #ccc;
      text-align: center;
    }

    button.add-btn {
      background: #5cb85c;
      color: white;
      padding: 6px 12px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
      transition: background 0.3s, transform 0.2s;
    }

    button.add-btn:hover {
      background: #449d44;
      transform: translateY(-1px);
    }

    .pagination {
      text-align: center;
      margin-top: 20px;
      font-size: 16px;
    }

    .pagination a {
      margin: 0 8px;
      color: #5563DE;
      text-decoration: none;
      font-weight: bold;
      transition: color 0.3s;
    }

    .pagination a:hover {
      color: #3b46b1;
      text-decoration: underline;
    }

    @media (max-width: 600px) {
      table, th, td {
        font-size: 14px;
      }

      form.search-form {
        flex-direction: column;
        align-items: center;
      }

      form.search-form input {
        width: 100%;
      }
    }
  </style>
</head>
<body>

  <h2>Staff Dashboard</h2>

  <nav>
    <a href="/staff/cart">Cart</a> |
    <a href="/staff/orders">My Orders</a>|
    <a href="/logout">Logout</a> 
  </nav>

  <hr>

  <!-- SEARCH -->
  <form method="GET" action="/staff/dashboard" class="search-form">
    <input name="search" placeholder="Search product" value="<%= search %>">
    <button type="submit">Search</button>
  </form>

  <!-- PRODUCT TABLE -->
  <table>
    <tr>
      <th>Product</th>
      <th>Available</th>
      <th>Add</th>
    </tr>

    <% products.forEach(p => { %>
      <tr>
        <td><%= p.name %></td>
        <td><%= p.quantity %></td>
        <td>
          <form method="POST" action="/staff/cart/add" style="display:flex; justify-content:center; gap:5px;">
            <input type="hidden" name="product_id" value="<%= p.id %>">
            <input type="number" name="quantity" min="1" required>
            <button class="add-btn" type="submit">Add</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>

  <!-- PAGINATION -->
  <div class="pagination">
    <% if (page > 1) { %>
      <a href="?page=<%= page - 1 %>&search=<%= search %>">Prev</a>
    <% } %>

    Page <%= page %>

    <% if (hasNext) { %>
      <a href="?page=<%= page + 1 %>&search=<%= search %>">Next</a>
    <% } %>
  </div>

</body>
</html>
