<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Product | Inventory Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <style>
    /* Reset and global styles */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f4f6f8;
      display: flex;
      min-height: 100vh;
      color: #333;
    }

    /* Sidebar navigation */
    .sidebar {
      width: 220px;
      background: #5563DE;
      padding: 30px 20px;
      display: flex;
      flex-direction: column;
      gap: 20px;
      color: white;
    }

    .sidebar a {
      color: white;
      text-decoration: none;
      font-weight: bold;
      transition: background 0.3s, padding 0.3s;
      padding: 10px 12px;
      border-radius: 6px;
    }

    .sidebar a:hover {
      background: #3b46b1;
      padding-left: 16px;
    }

    /* Main content area */
    .main-content {
      flex: 1;
      padding: 40px 30px;
    }

    h2 {
      color: #5563DE;
      margin-bottom: 20px;
    }

    a.back-button {
      display: inline-block;
      margin-bottom: 20px;
      padding: 10px 15px;
      background: #28a745;
      color: white;
      text-decoration: none;
      border-radius: 6px;
      font-weight: bold;
      transition: background 0.3s;
    }

    a.back-button:hover {
      background: #218838;
    }

    form {
      background: #fff;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.1);
      max-width: 500px;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    input, select {
      padding: 12px 15px;
      font-size: 16px;
      border-radius: 8px;
      border: 1px solid #ccc;
      transition: border-color 0.3s, box-shadow 0.3s;
    }

    input:focus, select:focus {
      border-color: #5563DE;
      box-shadow: 0 0 8px rgba(85, 99, 222, 0.3);
      outline: none;
    }

    button {
      padding: 12px;
      background: #5563DE;
      color: white;
      font-size: 18px;
      font-weight: bold;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.3s, transform 0.2s;
    }

    button:hover {
      background: #3b46b1;
      transform: translateY(-2px);
    }

    @media (max-width: 768px) {
      body {
        flex-direction: column;
      }
      .sidebar {
        width: 100%;
        flex-direction: row;
        justify-content: space-around;
      }
      .main-content {
        padding: 20px;
      }
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <a href="/inventory-admin/products">Products</a>
    <a href="/inventory-admin/products/add">Add Product</a>
    <a href="/inventory-admin/suppliers">Suppliers</a>
    <a href="/logout">Logout</a>
  </div>

  <!-- Main content -->
  <div class="main-content">
    <h2>Edit Product</h2>

    <a href="/inventory-admin/products" class="back-button">‚Üê Back</a>

    <form method="POST" action="/inventory-admin/products/edit/<%= product.id %>">
      <input
        name="name"
        value="<%= product.name %>"
        placeholder="Product Name"
        required
      />

      <input
        type="number"
        name="quantity"
        min="0"
        value="<%= product.quantity %>"
        required
      />

      <input
        name="description"
        value="<%= product.description %>"
        placeholder="Description"
        required
      />

      <select name="supplier_id" required>
        <% suppliers.forEach(s => { %>
          <option
            value="<%= s.id %>"
            <%= s.id === product.supplier_id ? "selected" : "" %>
          >
            <%= s.name %>
          </option>
        <% }) %>
      </select>

      <button type="submit">Update Product</button>
    </form>
  </div>

</body>
</html>
