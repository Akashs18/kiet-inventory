<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Products | Inventory Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- CSS -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<!-- JS (at the bottom, before </body>) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>


 <style>
  :root {
    --primary: #4F46E5;
    --primary-dark: #4338CA;
    --bg: #F9FAFB;
    --card-bg: #ffffff;
    --text: #111827;
    --muted: #6B7280;
    --border: #E5E7EB;
    --success: #16A34A;
    --warning: #F59E0B;
    --danger: #DC2626;
    --radius: 12px;
    --shadow-sm: 0 4px 12px rgba(0,0,0,0.05);
    --shadow-md: 0 8px 25px rgba(0,0,0,0.08);
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    background: var(--bg);
    display: flex;
    min-height: 100vh;
    font-family: 'Inter', 'Segoe UI', sans-serif;
    color: var(--text);
  }

  /* ======================
     SIDEBAR
  ====================== */
  .sidebar {
    width: 250px;
    background: linear-gradient(180deg, var(--primary), var(--primary-dark));
    padding: 30px 20px;
    display: flex;
    flex-direction: column;
  }

  .sidebar a {
    text-decoration: none;
    color: white;
    padding: 12px 14px;
    border-radius: 10px;
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 10px;
    transition: all 0.25s ease;
    opacity: 0.9;
  }

  .sidebar a:hover {
    background: rgba(255,255,255,0.15);
    opacity: 1;
    transform: translateX(4px);
  }

  /* ======================
     MAIN CONTENT
  ====================== */
  .main-content {
    flex: 1;
    padding: 40px;
  }

  h2 {
    font-size: 26px;
    font-weight: 600;
    margin-bottom: 25px;
  }

  /* ======================
     BUTTON SYSTEM
  ====================== */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 10px 16px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: 0.2s ease;
  }

  .btn-primary {
    background: var(--primary);
    color: white;
  }

  .btn-primary:hover {
    background: var(--primary-dark);
    transform: translateY(-1px);
  }

  .btn-success {
    background: var(--success);
    color: white;
  }

  .btn-success:hover {
    opacity: 0.9;
  }

  .btn-warning {
    background: var(--warning);
    color: #111;
  }

  .btn-warning:hover {
    opacity: 0.9;
  }

  .btn-danger {
    background: var(--danger);
    color: white;
  }

  .btn-danger:hover {
    background: #B91C1C;
    transform: translateY(-1px);
  }

  /* ======================
     SEARCH BAR
  ====================== */
  .search-bar {
    display: flex;
    gap: 10px;
    margin-bottom: 25px;
    align-items: center;
    flex-wrap: wrap;
  }

  .search-bar input[type="text"] {
    flex: 1;
    padding: 10px 14px;
    border-radius: 8px;
    border: 1px solid var(--border);
    font-size: 14px;
    outline: none;
    transition: 0.2s;
  }

  .search-bar input[type="text"]:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(79,70,229,0.1);
  }

  /* ======================
     TABLE
  ====================== */
  .table-wrapper {
    background: var(--card-bg);
    border-radius: var(--radius);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--border);
    overflow: hidden;
  }

  table {
    width: 100%;
    border-collapse: collapse;
  }

  thead {
    background: #F3F4F6;
  }

  th {
    text-align: left;
    padding: 14px 18px;
    font-size: 13px;
    font-weight: 600;
    color: var(--muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-bottom: 1px solid var(--border);
  }

  td {
    padding: 14px 18px;
    font-size: 14px;
    border-bottom: 1px solid var(--border);
  }

  tbody tr:hover {
    background: #F9FAFB;
  }

  td.description {
    max-width: 250px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: var(--muted);
  }

  .quantity {
    font-weight: 600;
  }

  .low-stock {
    color: var(--danger);
  }

  /* ======================
     ADD BUTTON CONTAINER
  ====================== */
  .action-bar {
    margin-top: 25px;
  }

  /* ======================
     RESPONSIVE
  ====================== */
  @media (max-width: 900px) {
    body {
      flex-direction: column;
    }

    .sidebar {
      width: 100%;
      flex-direction: row;
      justify-content: space-around;
    }

    .main-content {
      padding: 25px;
    }

    table {
      font-size: 13px;
    }
  }

  .pagination {
  margin-top: 25px;
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.page-btn {
  padding: 8px 14px;
  border-radius: 8px;
  border: 1px solid var(--border);
  background: white;
  text-decoration: none;
  font-size: 14px;
  color: var(--text);
  transition: 0.2s ease;
}

.page-btn:hover {
  background: var(--primary);
  color: white;
  border-color: var(--primary);
}

.page-btn.active {
  background: var(--primary);
  color: white;
  border-color: var(--primary);
  font-weight: 600;
}

</style>


</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <a href="/inventory-admin/dashboard">Dashboard</a>
    <a href="/inventory-admin/products">Products</a>
    <a href="/logout">Logout</a>
   
  </div>

  <!-- Main content -->
  <div class="main-content">
    <h2>Products</h2>

    <!-- Search bar -->
    <form class="search-bar" method="GET" action="/inventory-admin/products">
      <input
        type="text"
        name="search"
        placeholder="Search product..."
        value="<%= search %>"
      />
      <button type="submit" class="btn btn-primary">
        üîç Search
      </button>
      <% if (search) { %>
        <a href="/inventory-admin/products" class="btn btn-danger">
          Clear
        </a>
      <% } %>
    </form>

    <!-- Products table -->
    <div class="table-wrapper">
      <table>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Quantity</th>
          <th>Supplier</th>
          <th>Actions</th>
        </tr>

        <% products.forEach(p => { %>
          <tr>
            <td><%= p.name %></td>
            <td class="description" title="<%= p.description %>">
              <%= p.description ? p.description : "‚Äî" %>
            </td>
            <td><%= p.quantity %></td>
            <td><%= p.supplier %></td>
            
            <td>
              <a href="/inventory-admin/products/edit/<%= p.id %>" class="btn btn-warning">Edit</a>
            </td>
          </tr>
        <% }) %>
      </table>
    </div>
    <div class="action-bar">

  <button onclick="toggleAddRow()" class="btn btn-success">
    + Add Row
  </button>

  <!-- Inline Add Row Form -->
  <form id="addRowForm" method="POST" action="/inventory-admin/products" style="display:none; margin-top:20px;">
    <div class="table-wrapper">
      <table>
        <tr>
          <td>
            <input type="text" name="name" placeholder="Product name" required style="width:100%; padding:8px;">
          </td>
          <td>
            <input type="text" name="description" placeholder="Description" style="width:100%; padding:8px;">
          </td>
          <td>
            <input type="number" name="quantity" placeholder="Qty" required style="width:80px; padding:8px;">
          </td>
          <td>
            <label for="supplierSelect">Supplier:</label>
            <select name="supplier_id" id="supplierSelect" required style="width:100%;">
              <option value="" disabled selected>Select Supplier</option>

              <% suppliers.forEach(s => { %>
                <option value="<%= s.id %>"><%= s.name %></option>
              <% }) %>

              <option value="add_new">‚ûï Add New Supplier</option>
            </select>


          </td>
          <td>
            <button type="submit" class="btn btn-primary">Save</button>
          </td>
        </tr>
      </table>
    </div>
  </form>


      <% if (totalPages > 1) { %>
  <div class="pagination">
    <% if (currentPage > 1) { %>
      <a href="?search=<%= search %>&page=<%= currentPage - 1 %>" class="page-btn">
        ‚Üê Prev
      </a>
    <% } %>

    <% for (let i = 1; i <= totalPages; i++) { %>
      <a href="?search=<%= search %>&page=<%= i %>" class="page-btn <%= currentPage === i ? 'active' : '' %>">
        <%= i %>
      </a>
    <% } %>

    <% if (currentPage < totalPages) { %>
      <a href="?search=<%= search %>&page=<%= currentPage + 1 %>" class="page-btn">
        Next ‚Üí
      </a>
    <% } %>
  </div>
<% } %>

    </div>
  </div>

<script>
function toggleAddRow() {
  const form = document.getElementById("addRowForm");
  form.style.display = form.style.display === "none" ? "block" : "none";
}

 document.getElementById("supplierSelect").addEventListener("change", function () {
    if (this.value === "add_new") {
      window.location.href = "/inventory-admin/suppliers/add";
    }
  });

  $(document).ready(function() {
  $('#supplierSelect').select2({
    placeholder: "Select Supplier",
    allowClear: true,
    width: 'resolve'
  });

  // Handle "Add New Supplier"
  $('#supplierSelect').on('select2:select', function(e) {
    if (e.params.data.id === 'add_new') {
      window.location.href = '/inventory-admin/suppliers/add';
    }
  });
});
</script>

 
</body>
</html>
