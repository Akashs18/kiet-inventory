<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Products | Inventory Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <style>
    /* Reset and global styles */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f4f6f8;
      display: flex;
      min-height: 100vh;
      color: #333;
    }

    /* Sidebar navigation */
    .sidebar {
      width: 220px;
      background: #5563DE;
      padding: 30px 20px;
      display: flex;
      flex-direction: column;
      gap: 20px;
      color: white;
    }

    .sidebar a {
      color: white;
      text-decoration: none;
      font-weight: bold;
      transition: background 0.3s, padding 0.3s;
      padding: 10px 12px;
      border-radius: 6px;
    }

    .sidebar a:hover {
      background: #3b46b1;
      padding-left: 16px;
    }

    /* Main content area */
    .main-content {
      flex: 1;
      padding: 40px 30px;
    }

    h2 {
      color: #5563DE;
      margin-bottom: 20px;
    }

    a.button {
      display: inline-block;
      margin-right: 10px;
      padding: 8px 12px;
      background: #28a745;
      color: white;
      text-decoration: none;
      border-radius: 6px;
      font-weight: bold;
      transition: background 0.3s;
    }

    a.button:hover {
      background: #218838;
    }

    /* Search bar */
    form.search-bar {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
      flex-wrap: wrap;
      align-items: center;
    }

    form.search-bar input[type="text"] {
      padding: 10px 12px;
      border-radius: 8px;
      border: 1px solid #ccc;
      flex: 1;
    }

    form.search-bar button {
      padding: 10px 16px;
      border-radius: 8px;
      border: none;
      background: #5563DE;
      color: white;
      font-weight: bold;
      cursor: pointer;
      transition: background 0.3s;
    }

    form.search-bar button:hover {
      background: #3b46b1;
    }

    form.search-bar a.clear {
      padding: 8px 12px;
      background: #dc3545;
      color: white;
      text-decoration: none;
      border-radius: 6px;
      font-weight: bold;
      transition: background 0.3s;
    }

    form.search-bar a.clear:hover {
      background: #c82333;
    }

    /* Table styles */
    table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 10px 25px rgba(0,0,0,0.05);
    }

    th, td {
      padding: 12px 15px;
      text-align: left;
    }

    th {
      background: #5563DE;
      color: white;
    }

    tr:nth-child(even) {
      background: #f8f9fa;
    }

    tr:hover {
      background: #e2e6ea;
    }

    td a.edit {
      padding: 6px 10px;
      background: #ffc107;
      color: #212529;
      text-decoration: none;
      border-radius: 6px;
      font-weight: bold;
      transition: background 0.3s;
    }

    td a.edit:hover {
      background: #e0a800;
    }

    @media (max-width: 768px) {
      body {
        flex-direction: column;
      }
      .sidebar {
        width: 100%;
        flex-direction: row;
        justify-content: space-around;
        padding: 20px 0;
      }
      .main-content {
        padding: 20px;
      }
      form.search-bar {
        flex-direction: column;
        gap: 10px;
      }
      table {
        font-size: 14px;
      }
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <a href="/inventory-admin/dashboard">Dashboard</a>
    <a href="/inventory-admin/products">Products</a>
    <a href="/logout">Logout</a>
   
  </div>

  <!-- Main content -->
  <div class="main-content">
    <h2>Products</h2>

    
    
   


    <!-- Search bar -->
    <form class="search-bar" method="GET" action="/inventory-admin/products">
      <input
        type="text"
        name="search"
        placeholder="Search product..."
        value="<%= search %>"
      />
      <button type="submit">Search</button>
      <% if (search) { %>
        <a href="/inventory-admin/products" class="clear">Clear</a>
      <% } %>
    </form>

    <!-- Products table -->
    <table>
      <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Supplier</th>
        <th>Actions</th>
      </tr>

      <% products.forEach(p => { %>
        <tr>
          <td><%= p.name %></td>
          <td><%= p.quantity %></td>
          <td><%= p.supplier %></td>
          <td>
            <a href="/inventory-admin/products/edit/<%= p.id %>" class="edit">Edit</a>
          </td>
        </tr>
      <% }) %>
    </table>

    <a href="/inventory-admin/products/add" class="button">+ Add Product</a>
  </div>

</body>
</html>
