<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Inventory Admin Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Chart.js CDN -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
  :root {
    --primary: #4F46E5;
    --primary-dark: #4338CA;
    --bg: #F9FAFB;
    --card-bg: #ffffff;
    --text: #111827;
    --muted: #6B7280;
    --border: #E5E7EB;
    --success: #10B981;
    --warning: #F59E0B;
    --danger: #EF4444;
    --radius: 14px;
    --shadow-sm: 0 4px 12px rgba(0,0,0,0.05);
    --shadow-md: 0 10px 25px rgba(0,0,0,0.08);
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    background: var(--bg);
    display: flex;
    min-height: 100vh;
    font-family: 'Inter', 'Segoe UI', sans-serif;
    color: var(--text);
  }

  /* ======================
     SIDEBAR
  ====================== */
  .sidebar {
    width: 260px;
    background: linear-gradient(180deg, var(--primary), var(--primary-dark));
    padding: 30px 20px;
    display: flex;
    flex-direction: column;
    color: white;
  }

  .sidebar h3 {
    text-align: center;
    font-size: 18px;
    letter-spacing: 1px;
    margin-bottom: 30px;
    font-weight: 600;
  }

  .sidebar a {
    text-decoration: none;
    color: white;
    padding: 12px 14px;
    border-radius: 10px;
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 8px;
    transition: all 0.25s ease;
    opacity: 0.9;
  }

  .sidebar a:hover {
    background: rgba(255,255,255,0.15);
    opacity: 1;
    transform: translateX(4px);
  }

  .sidebar hr {
    border: none;
    border-top: 1px solid rgba(255,255,255,0.2);
    margin: 20px 0;
  }

  /* ======================
     MAIN CONTENT
  ====================== */
  .main-content {
    flex: 1;
    padding: 40px;
  }

  h2 {
    font-size: 26px;
    font-weight: 600;
    margin-bottom: 30px;
  }

  /* ======================
     STATS SECTION
  ====================== */
  .stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 25px;
  }

  .stat-card {
    background: var(--card-bg);
    border-radius: var(--radius);
    box-shadow: var(--shadow-sm);
    padding: 28px;
    display: flex;
    align-items: center;
    gap: 18px;
    transition: all 0.3s ease;
    border: 1px solid var(--border);
  }

  .stat-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-md);
  }

  .stat-icon {
    width: 50px;
    height: 50px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 22px;
    color: white;
  }

  .blue { background: var(--primary); }
  .green { background: var(--success); }
  .orange { background: var(--warning); }

  .stat-info h4 {
    font-size: 14px;
    color: var(--muted);
    margin-bottom: 6px;
    font-weight: 500;
  }

  .stat-info p {
    font-size: 26px;
    font-weight: 700;
  }

  /* ======================
     CHART SECTION
  ====================== */
  .charts {
    margin-top: 60px;
  }

  .chart-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 30px;
  }

  .card {
    background: var(--card-bg);
    border-radius: var(--radius);
    box-shadow: var(--shadow-sm);
    padding: 25px;
    border: 1px solid var(--border);
    transition: 0.3s ease;
  }

  .card:hover {
    box-shadow: var(--shadow-md);
  }

  .card h4 {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 20px;
    color: var(--text);
  }

  canvas {
    max-height: 300px;
  }

  /* ======================
     RESPONSIVE
  ====================== */
  @media (max-width: 900px) {
    body {
      flex-direction: column;
    }

    .sidebar {
      width: 100%;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      gap: 10px;
    }

    .sidebar h3 {
      display: none;
    }

    .main-content {
      padding: 25px;
    }
  }
</style>

</head>

<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <h3>INVENTORY</h3>

    <a href="/inventory-admin/products">Products</a>
    <a href="/inventory-admin/suppliers">Suppliers</a>

    <hr>

    <a href="/inventory-admin/orders/pending">Pending Orders</a>
    <a href="/inventory-admin/orders/history">Order History</a>

    <hr>

    <a href="/inventory-admin/po/upload">Upload PO</a>

    <hr>

    <a href="/logout">Logout</a>
  </div>

  <!-- Main content -->
  <div class="main-content">

    <h2>Inventory Admin Dashboard</h2>

    <!-- Stats -->
   <div class="stats">

      <div class="card stat-card">
        <div class="stat-icon blue">
          üì¶
        </div>
        <div class="stat-info">
          <h4>Total Products</h4>
          <p class="counter" data-target="<%= stats.products %>">0</p>
        </div>
      </div>

      <div class="card stat-card">
        <div class="stat-icon green">
          üöö
        </div>
        <div class="stat-info">
          <h4>Total Suppliers</h4>
          <p class="counter" data-target="<%= stats.suppliers %>">0</p>
        </div>
      </div>

      <div class="card stat-card">
        <div class="stat-icon orange">
          ‚è≥
        </div>
        <div class="stat-info">
          <h4>Pending Orders</h4>
          <p class="counter" data-target="<%= stats.pendingOrders %>">0</p>
        </div>
      </div>

  </div>


    <!-- Charts -->
    <div class="charts">
      <h2>Analytics Overview</h2>

      <div class="chart-grid">

        <div class="card">
          <h4 style="margin-bottom:15px;">Monthly Orders</h4>
          <canvas id="barChart"></canvas>
        </div>

        <div class="card">
          <h4 style="margin-bottom:15px;">Product Growth</h4>
          <canvas id="lineChart"></canvas>
        </div>

      </div>
    </div>

  </div>

  <!-- Chart Script -->
  <script>

    const months = ["Jan", "Feb", "Mar", "Apr", "May", "Jun"];

    // BAR CHART
    new Chart(document.getElementById("barChart"), {
      type: "bar",
      data: {
        labels: months,
        datasets: [{
          label: "Orders",
          data: <%= JSON.stringify(monthlyOrders || [12, 19, 8, 15, 22, 30]) %>,
          backgroundColor: "#5563DE",
          borderRadius: 6
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: { display: false }
        }
      }
    });

    // LINE CHART
    new Chart(document.getElementById("lineChart"), {
      type: "line",
      data: {
        labels: months,
        datasets: [{
          label: "Products Added",
          data: <%= JSON.stringify(productGrowth || [5, 10, 15, 20, 28, 35]) %>,
          borderColor: "#5563DE",
          backgroundColor: "rgba(85, 99, 222, 0.2)",
          fill: true,
          tension: 0.4
        }]
      },
      options: {
        responsive: true
      }
    });

   
  const counters = document.querySelectorAll('.counter');

  counters.forEach(counter => {
    const target = +counter.getAttribute('data-target');
    const duration = 1000; // animation duration in ms
    const stepTime = 20;
    const totalSteps = duration / stepTime;
    const increment = target / totalSteps;

    let current = 0;

    const updateCounter = () => {
      current += increment;
      if (current < target) {
        counter.innerText = Math.floor(current).toLocaleString();
        setTimeout(updateCounter, stepTime);
      } else {
        counter.innerText = target.toLocaleString();
      }
    };

    updateCounter();
  });



  </script>

</body>
</html>
