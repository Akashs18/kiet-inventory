<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Suppliers | Inventory Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <style>
  :root {
    --primary: #4F46E5;
    --primary-dark: #4338CA;
    --bg: #F9FAFB;
    --card: #ffffff;
    --text: #111827;
    --muted: #6B7280;
    --border: #E5E7EB;
    --success: #16A34A;
    --warning: #F59E0B;
    --danger: #DC2626;
    --radius: 12px;
    --shadow-sm: 0 4px 12px rgba(0,0,0,0.05);
    --shadow-md: 0 10px 25px rgba(0,0,0,0.08);
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    background: var(--bg);
    display: flex;
    font-family: 'Inter', 'Segoe UI', sans-serif;
    color: var(--text);
    height: 100vh;
    overflow: hidden;
  }

  /* =======================
     SIDEBAR
  ======================= */
  .sidebar {
    width: 250px;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background: linear-gradient(180deg, var(--primary), var(--primary-dark));
    padding: 30px 20px;
    display: flex;
    flex-direction: column;
  }

  .sidebar a {
    color: white;
    text-decoration: none;
    padding: 12px 14px;
    border-radius: 10px;
    font-size: 14px;
    margin-bottom: 8px;
    transition: 0.25s ease;
  }

  .sidebar a:hover {
    background: rgba(255,255,255,0.15);
    transform: translateX(4px);
  }

  /* =======================
     MAIN CONTENT
  ======================= */
  .main-content {
    margin-left: 250px;
    flex: 1;
    padding: 40px;
    overflow-y: auto;
    height: 100vh;
  }

  h2 {
    font-size: 26px;
    font-weight: 600;
    margin-bottom: 25px;
  }

  /* =======================
     SEARCH BAR
  ======================= */
  .search-bar {
    display: flex;
    gap: 12px;
    margin-bottom: 25px;
    flex-wrap: wrap;
  }

  .search-bar input {
    flex: 1;
    max-width: 420px;
    padding: 10px 14px;
    border-radius: 8px;
    border: 1px solid var(--border);
    font-size: 14px;
    outline: none;
  }

  .search-bar input:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(79,70,229,0.1);
  }

  /* =======================
     BUTTON SYSTEM
  ======================= */
  .btn {
    padding: 10px 16px;
    border-radius: 8px;
    border: none;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    transition: 0.2s ease;
  }

  .btn-primary {
    background: var(--primary);
    color: white;
  }

  .btn-primary:hover {
    background: var(--primary-dark);
  }

  .btn-secondary {
    background: #E5E7EB;
    color: #374151;
  }

  .btn-secondary:hover {
    background: #D1D5DB;
  }

  .btn-success {
    background: var(--success);
    color: white;
  }

  .btn-success:hover {
    opacity: 0.9;
  }

  .btn-warning {
    background: var(--warning);
    color: #111;
  }

  .btn-warning:hover {
    opacity: 0.9;
  }

  /* =======================
     TABLE
  ======================= */
  .table-wrapper {
    background: var(--card);
    border-radius: var(--radius);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--border);
    overflow: hidden;
  }

  table {
    width: 100%;
    border-collapse: collapse;
  }

  thead {
    background: #F3F4F6;
  }

  th {
    padding: 14px 18px;
    text-align: left;
    font-size: 13px;
    text-transform: uppercase;
    color: var(--muted);
    border-bottom: 1px solid var(--border);
  }

  td {
    padding: 14px 18px;
    border-bottom: 1px solid var(--border);
    font-size: 14px;
  }

  tbody tr:hover {
    background: #F9FAFB;
  }

  .action-bar {
    margin-bottom: 20px;
  }

  /* =======================
     RESPONSIVE
  ======================= */
  @media (max-width: 900px) {
    body {
      flex-direction: column;
      overflow: auto;
      height: auto;
    }

    .sidebar {
      position: relative;
      width: 100%;
      height: auto;
      flex-direction: row;
      justify-content: space-around;
    }

    .main-content {
      margin-left: 0;
      height: auto;
    }
  }
</style>

</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <a href="/inventory-admin/dashboard">Dashboard</a>
    
    <a href="/inventory-admin/suppliers">Suppliers</a>
    <a href="/logout">Logout</a>
  </div>

  <!-- Main content -->
  <div class="main-content">
    <h2>Suppliers</h2>

 <form method="GET" class="search-bar">
  <input
    type="text"
    name="q"
    placeholder="Search by ID, name, contact, or address..."
    value="<%= query || '' %>"
  />

  <button type="submit" class="btn btn-primary">
    üîç Search
  </button>

  <a href="/inventory-admin/suppliers" class="btn btn-secondary">
    Clear
  </a>
</form>

   <div class="action-bar">
      <a href="/inventory-admin/suppliers/add" class="btn btn-success">
        + Add Supplier
      </a>
   </div>

    
    <div class="table-wrapper">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Contact</th>
            <th>Address</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% suppliers.forEach(s => { %>
            <tr>
              <td><%= s.id %></td>
              <td><%= s.name %></td>
              <td><%= s.contact %></td>
              <td><%= s.address %></td>
              <td>
                  <a href="/inventory-admin/suppliers/edit/<%= s.id %>" class="btn btn-warning">
                     Edit
                  </a>

              </td>

            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>  
  </div>

</body>
</html>
