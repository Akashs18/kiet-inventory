<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Suppliers | Inventory Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <style>
    /* Reset and global styles */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f4f6f8;
      display: flex;
      min-height: 100vh;
      color: #333;
    }

    /* Sidebar navigation */
    .sidebar {
      width: 220px;
      background: #5563DE;
      padding: 30px 20px;
      display: flex;
      flex-direction: column;
      gap: 20px;
      color: white;
    }

    .sidebar a {
      color: white;
      text-decoration: none;
      font-weight: bold;
      transition: background 0.3s, padding 0.3s;
      padding: 10px 12px;
      border-radius: 6px;
    }

    .sidebar a:hover {
      background: #3b46b1;
      padding-left: 16px;
    }

    /* Main content area */
    .main-content {
      flex: 1;
      padding: 40px 30px;
    }

    h2 {
      color: #5563DE;
      margin-bottom: 20px;
    }

    a.button {
      display: inline-block;
      padding: 10px 15px;
      margin-right: 10px;
      margin-bottom: 20px;
      background: #28a745;
      color: white;
      text-decoration: none;
      border-radius: 6px;
      font-weight: bold;
      transition: background 0.3s;
    }

    a.button.add {
      background: #007bff;
    }

    a.button.add:hover {
      background: #0056b3;
    }

    a.button.dashboard:hover {
      background: #218838;
    }

    /* Table styles */
    table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 10px 25px rgba(0,0,0,0.05);
    }

    th, td {
      padding: 12px 15px;
      text-align: left;
    }

    th {
      background: #5563DE;
      color: white;
    }

    tr:nth-child(even) {
      background: #f8f9fa;
    }

    tr:hover {
      background: #e2e6ea;
    }

    @media (max-width: 768px) {
      body {
        flex-direction: column;
      }
      .sidebar {
        width: 100%;
        flex-direction: row;
        justify-content: space-around;
        padding: 20px 0;
      }
      .main-content {
        padding: 20px;
      }
      table {
        font-size: 14px;
      }
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <a href="/inventory-admin/dashboard">Dashboard</a>
    
    <a href="/inventory-admin/suppliers">Suppliers</a>
    <a href="/logout">Logout</a>
  </div>

  <!-- Main content -->
  <div class="main-content">
    <h2>Suppliers</h2>

    <form method="GET" style="margin-bottom: 20px;">
  <input
    type="text"
    name="q"
    placeholder="Search by ID, name, contact, or address..."
    value="<%= query || '' %>"
    style="
      width: 100%;
      max-width: 400px;
      padding: 10px 14px;
      border-radius: 8px;
      border: 1px solid #ccc;
      font-size: 15px;
    "
  />
</form>


    <a href="/inventory-admin/suppliers/add" class="button add">+ Add Supplier</a>
    <a href="/inventory-admin/dashboard" class="button dashboard">Dashboard</a>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Contact</th>
          <th>Address</th>
        </tr>
      </thead>
      <tbody>
        <% suppliers.forEach(s => { %>
          <tr>
            <td><%= s.id %></td>
            <td><%= s.name %></td>
            <td><%= s.contact %></td>
            <td><%= s.address %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</body>
</html>
