<!DOCTYPE html>
<html>
<head>
  <title>Suppliers</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      padding: 10px;
      border: 1px solid #ccc;
      text-align: left;
    }
    th {
      background-color: #f4f4f4;
    }
    a.button {
      display: inline-block;
      padding: 8px 12px;
      margin-bottom: 10px;
      background: #007bff;
      color: white;
      text-decoration: none;
      border-radius: 4px;
    }
    a.button:hover {
      background: #0056b3;
    }
  </style>
</head>
<body>
  <h2>Suppliers</h2>

  <a href="/inventory-admin/suppliers/add" class="button">Add Supplier</a>
  <a href="/inventory-admin/dashboard" class="button" style="background:#28a745;">Dashboard</a>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Contact</th>
        <th>Address</th>
      </tr>
    </thead>
    <tbody>
      <% suppliers.forEach(s => { %>
        <tr>
          <td><%= s.id %></td>
          <td><%= s.name %></td>
          <td><%= s.contact %></td>
          <td><%= s.address %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
